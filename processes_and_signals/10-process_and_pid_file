#!/usr/bin/env bash
# Creates PID file and handles various signals

# PID file path
PID_FILE="/var/run/myscript.pid"

# Write own PID to file
echo $$ > "$PID_FILE"

# Signal handler functions
handle_sigterm() {
    echo "I hate the kill command"
    cleanup
    exit 0
}

handle_sigint() {
    echo "Y U no love me?!"
}

handle_sigquit() {
    cleanup
    exit 0
}

# Cleanup function
cleanup() {
    [ -f "$PID_FILE" ] && rm -f "$PID_FILE"
}

# Trap signals
trap handle_sigterm SIGTERM
trap handle_sigint SIGINT
trap handle_sigquit SIGQUIT

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 1
done

# Cleanup (additional safety)
cleanup
