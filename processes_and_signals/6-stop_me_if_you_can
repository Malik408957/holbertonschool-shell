#!/usr/bin/env bash
# This script stops the 4-to_infinity_and_beyond process without using kill or killall

# Find the process ID of 4-to_infinity_and_beyond
pid=$(pgrep -f "4-to_infinity_and_beyond")

# Check if the process exists
if [ -n "$pid" ]; then
    # Send SIGTERM to the process to terminate it gracefully
    pkill -TERM -f "4-to_infinity_and_beyond"
else
    # If no process is found, exit
    exit 0
fi
