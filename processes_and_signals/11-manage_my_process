#!/usr/bin/env bash
# Manages the background process (start, stop, restart)

# Define paths
PID_FILE="/var/run/my_process.pid"
SCRIPT="./manage_my_process"

case "$1" in
    "start")
        # Stop any existing process first
        if [ -f "$PID_FILE" ]; then
            kill -9 "$(cat "$PID_FILE")" 2>/dev/null
            rm -f "$PID_FILE"
        fi
        
        # Start the process and save PID to file
        "$SCRIPT" &
        echo $! > "$PID_FILE"
        echo "manage_my_process started"
        ;;
    "stop")
        # Stop the process and remove PID file
        if [ -f "$PID_FILE" ]; then
            kill -9 "$(cat "$PID_FILE")" 2>/dev/null
            rm -f "$PID_FILE"
        fi
        echo "manage_my_process stopped"
        ;;
    "restart")
        # Stop the process
        if [ -f "$PID_FILE" ]; then
            kill -9 "$(cat "$PID_FILE")" 2>/dev/null
            rm -f "$PID_FILE"
        fi
        
        # Start the process and save PID to file
        "$SCRIPT" &
        echo $! > "$PID_FILE"
        echo "manage_my_process restarted"
        ;;
    *)
        # Invalid argument
        echo "Usage: manage_my_process {start|stop|restart}" >&2
        exit 1
        ;;
esac

exit 0
