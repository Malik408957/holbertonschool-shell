#!/usr/bin/env bash
# Manages the background process (start, stop, restart)
# Define paths
PID_FILE="/var/run/my_process.pid"
SCRIPT="./manage_my_process"

# Ensure /var/run directory exists and is writable
mkdir -p /var/run
chmod 777 /var/run

case "$1" in
    start)
        # Stop any existing process first
        if [ -f "$PID_FILE" ]; then
            kill -9 "$(cat "$PID_FILE")" 2>/dev/null
            rm -f "$PID_FILE"
        fi

        # Start the process and save PID to file
        $SCRIPT &
        echo $! > "$PID_FILE"
        chmod 644 "$PID_FILE"
        echo "manage_my_process started"
        ;;
    stop)
        # Stop the process and remove PID file
        if [ -f "$PID_FILE" ]; then
            kill -9 "$(cat "$PID_FILE")" 2>/dev/null
            rm -f "$PID_FILE"
            echo "manage_my_process stopped"
        else
            echo "No process running"
        fi
        ;;
    restart)
        # Stop then start
        $0 stop
        sleep 1
